<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#b3eaf9"
    tools:context="io.github.ryanfin.facerekognitionapp.ResponsePopUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:src="@drawable/local_output"/>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="80dp"
                android:text="Smile:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#ff0077"
                app:layout_constraintEnd_toStartOf="@+id/smile_value"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/smile_value"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="28dp"
                android:text="placehold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="32dp"
                android:text="EyeGlasses:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#ff0077"
                app:layout_constraintEnd_toStartOf="@+id/eyeglasses_value"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/eyeglasses_value"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="28dp"
                android:text="placehold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/smile_value" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="68dp"
                android:layout_height="29dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="24dp"
                android:text="Value"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp"
                android:text="Confidence"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/responsetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:layout_marginTop="5dp"/>


    </LinearLayout>

</ScrollView>
